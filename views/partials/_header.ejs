<header>
  <div>
  <nav style="background: linear-gradient(#64d0e6, #325cd2)" class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      </div>

      <% if (userId) { %>
        <div style=" display: flex; gap: 20px; text-align: center;">
        <p> <span style="color:blue;">Logged in as :</span> <strong><%= users[userId]?.email %></strong></p>
      <form method="POST" action="/logout">
        <button type="submit" class="btn btn-primary">Logout</button>
      </form>
    </div>
      <% } else  { %>
        <div style="width: 250px; display: flex; justify-content: space-evenly;">
      <a style="background-color: #fff; padding: 5px 10px; border-radius: 5px;" href="/register"> Register</a>
      <a style="background-color: #fff; padding: 5px 10px; border-radius: 5px;" href="/login"> Login</a>
    </div>
      <% } %>
    </div>
  </nav>
</header>
